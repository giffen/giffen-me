---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

export async function getStaticPaths() {
  const posts = await getCollection("writing");
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<BaseLayout title={`${post.data.title} â€” Writing`} description={post.data.description}>
  <article class="writing-detail">
    <header class="article-header">
      <a href="/writing" class="back-link">
        <svg viewBox="0 0 24 24"><path d="M19 12H5M12 19l-7-7 7-7"/></svg>
        Back to Writing
      </a>
      
      <div class="article-meta">
        <span class="article-tag">{post.data.tag}</span>
        <span class="article-date">{post.data.date}</span>
      </div>
      
      <h1 class="article-title">{post.data.title}</h1>
      <p class="article-description">{post.data.description}</p>
    </header>

    <div class="article-content prose">
      <Content />
    </div>

    <footer class="article-footer">
      <p class="footer-text">
        Thanks for reading. If you found this useful, you might also enjoy exploring 
        my <a href="/lab">lab projects</a> or <a href="/writing">other writing</a>.
      </p>
      <div class="footer-cta">
        <a href="https://linkedin.com/in/andrewgiffen" class="footer-link" target="_blank" rel="noopener noreferrer">
          <svg viewBox="0 0 24 24"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/><rect x="2" y="9" width="4" height="12"/><circle cx="4" cy="4" r="2"/></svg>
          Connect on LinkedIn
        </a>
        <a href="mailto:hello@giffen.me" class="footer-link">
          <svg viewBox="0 0 24 24"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/><polyline points="22,6 12,13 2,6"/></svg>
          Get in touch
        </a>
      </div>
    </footer>
  </article>
</BaseLayout>

<style>
  .writing-detail {
    padding: var(--space-10) var(--space-7);
    max-width: 800px;
    margin: 0 auto;
  }

  .article-header {
    margin-bottom: var(--space-8);
    padding-bottom: var(--space-7);
    border-bottom: 1px solid var(--paper-edge);
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    color: var(--ink-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--space-6);
    transition: color 0.2s ease;
  }

  .back-link:hover {
    color: var(--accent);
  }

  .back-link svg {
    width: 18px;
    height: 18px;
    stroke: currentColor;
    stroke-width: 2;
    fill: none;
  }

  .article-meta {
    display: flex;
    align-items: center;
    gap: var(--space-4);
    margin-bottom: var(--space-4);
  }

  .article-tag {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--accent);
    background: var(--accent-soft);
    padding: 4px 12px;
    border-radius: 4px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .article-date {
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    color: var(--ink-muted);
  }

  .article-title {
    font-family: var(--font-display);
    font-size: var(--text-4xl);
    font-weight: 400;
    color: var(--ink);
    line-height: 1.2;
    margin-bottom: var(--space-4);
  }

  .article-description {
    font-size: var(--text-lg);
    color: var(--ink-soft);
    line-height: 1.7;
  }

  /* Prose styles for markdown content */
  .prose {
    font-size: var(--text-base);
    line-height: 1.8;
    color: var(--ink-soft);
  }

  .prose :global(h2) {
    font-family: var(--font-display);
    font-size: var(--text-2xl);
    font-weight: 500;
    color: var(--ink);
    margin-top: var(--space-8);
    margin-bottom: var(--space-4);
  }

  .prose :global(h3) {
    font-family: var(--font-display);
    font-size: var(--text-xl);
    font-weight: 500;
    color: var(--ink);
    margin-top: var(--space-6);
    margin-bottom: var(--space-3);
  }

  .prose :global(p) {
    margin-bottom: var(--space-5);
  }

  .prose :global(ul),
  .prose :global(ol) {
    margin-bottom: var(--space-5);
    padding-left: var(--space-6);
  }

  .prose :global(li) {
    margin-bottom: var(--space-2);
  }

  .prose :global(blockquote) {
    border-left: 3px solid var(--accent);
    padding-left: var(--space-5);
    margin: var(--space-6) 0;
    font-style: italic;
    color: var(--ink);
  }

  .prose :global(code) {
    font-family: var(--font-mono);
    font-size: 0.9em;
    background: var(--cream-dark);
    padding: 2px 6px;
    border-radius: 4px;
  }

  .prose :global(pre) {
    background: var(--ink);
    color: var(--cream);
    padding: var(--space-5);
    border-radius: 8px;
    overflow-x: auto;
    margin: var(--space-6) 0;
  }

  .prose :global(pre code) {
    background: none;
    padding: 0;
    color: inherit;
  }

  .prose :global(a) {
    color: var(--accent);
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .prose :global(a:hover) {
    color: var(--accent-light);
  }

  .prose :global(strong) {
    color: var(--ink);
    font-weight: 600;
  }

  .prose :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: var(--space-6) 0;
  }

  .prose :global(th),
  .prose :global(td) {
    padding: var(--space-3) var(--space-4);
    border: 1px solid var(--paper-edge);
    text-align: left;
  }

  .prose :global(th) {
    background: var(--cream-dark);
    font-weight: 600;
    color: var(--ink);
  }

  .prose :global(hr) {
    border: none;
    border-top: 1px solid var(--paper-edge);
    margin: var(--space-8) 0;
  }

  /* Footer */
  .article-footer {
    margin-top: var(--space-9);
    padding-top: var(--space-7);
    border-top: 1px solid var(--paper-edge);
  }

  .footer-text {
    font-size: var(--text-base);
    color: var(--ink-soft);
    margin-bottom: var(--space-5);
  }

  .footer-text a {
    color: var(--accent);
  }

  .footer-cta {
    display: flex;
    gap: var(--space-4);
  }

  .footer-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    color: var(--ink-soft);
    padding: var(--space-3) var(--space-5);
    border: 1px solid var(--paper-edge);
    border-radius: 6px;
    transition: all 0.2s ease;
  }

  .footer-link:hover {
    border-color: var(--accent);
    color: var(--accent);
  }

  .footer-link svg {
    width: 18px;
    height: 18px;
    stroke: currentColor;
    stroke-width: 1.5;
    fill: none;
  }

  @media (max-width: 768px) {
    .writing-detail {
      padding: var(--space-9) var(--space-5);
    }

    .article-title {
      font-size: var(--text-3xl);
    }

    .footer-cta {
      flex-direction: column;
    }
  }
</style>
