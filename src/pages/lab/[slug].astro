---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

export async function getStaticPaths() {
  const posts = await getCollection("lab");

  // Only generate pages for published posts
  const publishedPosts = posts.filter(post => post.data.published !== false);
  
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<BaseLayout title={`${post.data.title} â€” Lab`} description={post.data.description}>
  <article class="lab-detail">
    <header class="article-header">
      <a href="/lab" class="back-link">
        <svg viewBox="0 0 24 24"><path d="M19 12H5M12 19l-7-7 7-7"/></svg>
        Back to Lab
      </a>
      
      <div class="article-meta">
        <span class="article-date">{post.data.date}</span>
        {post.data.status === 'in-progress' && (
          <span class="article-status">In Progress</span>
        )}
      </div>
      
      <h1 class="article-title">{post.data.title}</h1>
      <p class="article-description">{post.data.description}</p>
      
      <div class="article-tags">
        {post.data.tags.map((tag) => (
          <span class="article-tag">{tag}</span>
        ))}
      </div>
      
      {(post.data.repoUrl || post.data.liveUrl) && (
        <div class="article-links">
          {post.data.repoUrl && (
            <a href={post.data.repoUrl} class="article-link" target="_blank" rel="noopener noreferrer">
              <svg viewBox="0 0 24 24"><path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"/></svg>
              View Repository
            </a>
          )}
          {post.data.liveUrl && (
            <a href={post.data.liveUrl} class="article-link" target="_blank" rel="noopener noreferrer">
              <svg viewBox="0 0 24 24"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6M15 3h6v6M10 14L21 3"/></svg>
              Live Demo
            </a>
          )}
        </div>
      )}
    </header>

    <div class="article-content prose">
      <Content />
    </div>
  </article>
</BaseLayout>

<style>
  .lab-detail {
    padding: var(--space-10) var(--space-7);
    max-width: 800px;
    margin: 0 auto;
  }

  .article-header {
    margin-bottom: var(--space-8);
    padding-bottom: var(--space-7);
    border-bottom: 1px solid var(--paper-edge);
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    color: var(--ink-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--space-6);
    transition: color 0.2s ease;
  }

  .back-link:hover {
    color: var(--accent);
  }

  .back-link svg {
    width: 18px;
    height: 18px;
    stroke: currentColor;
    stroke-width: 2;
    fill: none;
  }

  .article-meta {
    display: flex;
    align-items: center;
    gap: var(--space-4);
    margin-bottom: var(--space-4);
  }

  .article-date {
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    color: var(--ink-muted);
  }

  .article-status {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--accent);
    background: var(--accent-soft);
    padding: 4px 12px;
    border-radius: 4px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .article-title {
    font-family: var(--font-display);
    font-size: var(--text-4xl);
    font-weight: 400;
    color: var(--ink);
    line-height: 1.2;
    margin-bottom: var(--space-4);
  }

  .article-description {
    font-size: var(--text-lg);
    color: var(--ink-soft);
    line-height: 1.7;
    margin-bottom: var(--space-5);
  }

  .article-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
    margin-bottom: var(--space-5);
  }

  .article-tag {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--ink-soft);
    background: var(--cream-dark);
    padding: 4px 12px;
    border-radius: 4px;
  }

  .article-links {
    display: flex;
    gap: var(--space-4);
  }

  .article-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    color: var(--accent);
    padding: var(--space-3) var(--space-5);
    border: 1px solid var(--accent);
    border-radius: 6px;
    transition: all 0.2s ease;
  }

  .article-link:hover {
    background: var(--accent);
    color: white;
  }

  .article-link svg {
    width: 18px;
    height: 18px;
    stroke: currentColor;
    stroke-width: 1.5;
    fill: none;
  }

  /* Prose styles for markdown content */
  .prose {
    font-size: var(--text-base);
    line-height: 1.8;
    color: var(--ink-soft);
  }

  .prose :global(h2) {
    font-family: var(--font-display);
    font-size: var(--text-2xl);
    font-weight: 500;
    color: var(--ink);
    margin-top: var(--space-8);
    margin-bottom: var(--space-4);
  }

  .prose :global(h3) {
    font-family: var(--font-display);
    font-size: var(--text-xl);
    font-weight: 500;
    color: var(--ink);
    margin-top: var(--space-6);
    margin-bottom: var(--space-3);
  }

  .prose :global(p) {
    margin-bottom: var(--space-5);
  }

  .prose :global(ul),
  .prose :global(ol) {
    margin-bottom: var(--space-5);
    padding-left: var(--space-6);
  }

  .prose :global(li) {
    margin-bottom: var(--space-2);
  }

  .prose :global(blockquote) {
    border-left: 3px solid var(--accent);
    padding-left: var(--space-5);
    margin: var(--space-6) 0;
    font-style: italic;
    color: var(--ink);
  }

  .prose :global(code) {
    font-family: var(--font-mono);
    font-size: 0.9em;
    background: var(--cream-dark);
    padding: 2px 6px;
    border-radius: 4px;
  }

  .prose :global(pre) {
    background: var(--ink);
    color: var(--cream);
    padding: var(--space-5);
    border-radius: 8px;
    overflow-x: auto;
    margin: var(--space-6) 0;
  }

  .prose :global(pre code) {
    background: none;
    padding: 0;
    color: inherit;
  }

  .prose :global(a) {
    color: var(--accent);
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .prose :global(a:hover) {
    color: var(--accent-light);
  }

  .prose :global(strong) {
    color: var(--ink);
    font-weight: 600;
  }

  .prose :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: var(--space-6) 0;
  }

  .prose :global(th),
  .prose :global(td) {
    padding: var(--space-3) var(--space-4);
    border: 1px solid var(--paper-edge);
    text-align: left;
  }

  .prose :global(th) {
    background: var(--cream-dark);
    font-weight: 600;
    color: var(--ink);
  }

  @media (max-width: 768px) {
    .lab-detail {
      padding: var(--space-9) var(--space-5);
    }

    .article-title {
      font-size: var(--text-3xl);
    }

    .article-links {
      flex-direction: column;
    }
  }
</style>